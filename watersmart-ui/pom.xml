                        <include>**/geoext/ux/SOS/SOSGetCapabilitiesStore.js</include>
                        <include>**/geoext/ux/SOS/SOSGetObservationReader.js</include>
                        <include>**/geoext/ux/SOS/SOSGetObservationStore.js</include>
                        <include>**/geoext/ux/CSW/Format/v2_0_2.js</include>
                        <include>**/geoext/ux/CSW/CSWGetRecordsReader.js</include>
                        <include>**/geoext/ux/CSW/CSWGetRecordsStore.js</include>
                        <include>**/log4javascript/log4javascript.js</include>
                        <include>**/ext/ux/notify/notify.js</include>
                        <include>**/ext/ux/fileuploadfield/FileUploadField.js</include>
                        <include>**/sarissa/sarissa.js</include>
                        <include>**/sarissa/sarissa_ieemu_xpath.js</include>
                        <include>**/dygraphs/lib/dygraph-dev.js</include>
                        <include>**/pages/index/WPSProcesses/ExampleEmailWPSWrapperProcess.js</include>
                        <include>**/pages/index/WPSProcesses/ExampleWPSProcess.js</include>
                        <include>**/pages/index/Form/ProcessFormPanel.js</include>
                        <include>**/pages/index/Form/IsoFormPanel.js</include>
                        <include>**/pages/index/Form/FileUploadPanel.js</include>
                        <include>**/pages/index/Form/ModelPanel.js</include>
                        <include>**/pages/index/Form/ScenarioPanel.js</include>
                        <include>**/pages/index/Form/RunPanel.js</include>
                        <include>**/pages/index/Form/ModelRunSelectionPanel.js</include>
                        <include>**/pages/index/Plotter/PlotterPanel.js</include>
                        <include>**/pages/index/Map/map.js</include>
                        <include>**/pages/index/Plotter/SOSController.js</include>
                    </sourceIncludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
