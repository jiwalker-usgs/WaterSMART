    <build>
        <finalName>nwcip</finalName>
        <plugins>
            <plugin>
                <groupId>com.github.searls</groupId>
                <artifactId>jasmine-maven-plugin</artifactId>
                <version>1.2.0.1-1</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <browserVersion>INTERNET_EXPLORER_8</browserVersion>
                    <jsSrcDir>${project.build.directory}/${project.build.finalName}/js</jsSrcDir>
                    <customRunnerTemplate>${project.build.directory}/${project.build.finalName}/WEB-INF/classes/CustomSpecRunner.htmltemplate</customRunnerTemplate>
                    <sourceIncludes>
                        <include>**/openlayers/OpenLayers.js</include>
                        <include>**/ext/adapter/ext/ext-base.js</include>
                        <include>**/ext/ext-all.js</include>
                        <include>**/geoext/GeoExt.js</include>
                        <include>**/geoext/lib/overrides/override-ext-ajax.js</include>
                        <include>**/geoext/ux/WPS/WPSCapabilitiesReader.js</include>
